<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <include
        android:id="@+id/include"
        layout="@layout/blur_background_auth" />

    <me.ibrahimsn.lib.SmoothBottomBar
        android:id="@+id/bottom_nav_view"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingHorizontal="@dimen/_16sdp"
        app:backgroundColor="@color/color_theme"
        app:iconSize="@dimen/_18sdp"
        app:iconTint="@color/white"
        app:iconTintActive="@color/white"
        app:indicatorRadius="@dimen/_12sdp"
        app:itemPadding="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu"
        app:sideMargins="@dimen/_12sdp"
        app:textColor="@color/white"
        app:textSize="@dimen/_11ssp"/>

</androidx.constraintlayout.widget.ConstraintLayout>